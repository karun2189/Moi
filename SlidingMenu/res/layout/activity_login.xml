<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_small_large" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_login_top2"
                android:drawableLeft="@drawable/ic_launcher"
                android:gravity="center"
                android:text="Moi Avenue"
                android:textColor="@color/white_text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_userid_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_login_top"
                android:background="@color/button_back"
                android:ems="10"
                android:hint="User Name"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_fp_email" >

                <requestFocus android:layout_width="match_parent" />
            </EditText>

            <EditText
                android:id="@+id/login_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_login_top"
                android:background="@color/button_back"
                android:ems="10"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="@dimen/padding_fp_email" />

            <Button
                android:id="@+id/login_login_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_login_top2"
                android:background="@drawable/green_button"
                android:gravity="center"
                android:text="LogIn"
                android:textColor="@color/white_text"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/login_register_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@drawable/round_rect_button"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="@color/white_text"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/login_forgot_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/round_rect_button"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Forgot Password"
                    android:textColor="@color/white_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>